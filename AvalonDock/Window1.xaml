<Window x:Class="AvalonDock.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AvalonDock"
        mc:Ignorable="d"
        Title="Window1" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="button" Content="start" Margin="10,10" Width="75" Click="button_Click"/>
            <Button x:Name="button1" Content="stop" Margin="10,10" Width="75"/>

        </StackPanel>
        <Canvas x:Name="canvas" Grid.Row="1">
            
        </Canvas>

    </Grid>
</Window>
